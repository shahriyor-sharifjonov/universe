  body 
    .profile
      .swiper-container
        .swiper-wrapper
          .swiper-slide.menu 
            include components/sidebar.pug
            +sidebar 
          .swiper-slide.content
            .menu-button
              .bar
              .bar
              .bar
            .profile__header
              include components/header.pug
              +header
            .profile__content
              .profile__category  
